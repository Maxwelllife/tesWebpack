<!doctype html>
<html lang="{{ lang }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Test ForForce</title>
</head>
<body>
<div class="d-flex flex-column vh-100">
{% include "./blocks/header/header.twig" %}
<main class="flex-grow-1 flex-shrink-0 container">
  {% block pageContent %}
    <div class="typography">
      <h1>Page list</h1>
      <ul>
        <li>
          <b>Main</b>: <a href="main.html">main.html</a>
        </li>
      </ul>
      <hr>
      <h1>Environment constants</h1>
      <ol>
        <li>
          <b>NODE_ENV</b>: <code>{{ NODE_ENV }}</code>
        </li>
        <li>
          <b>FOLDER_PRIVATE_BASE</b>: <code>{{ FOLDER_PRIVATE_BASE }}</code>
        </li>
        <li>
          <b>FOLDER_PUBLIC_BASE</b>: <code>{{ FOLDER_PUBLIC_BASE }}</code>
        </li>
      </ol>
    </div>
  {% endblock %}
</main>

  {% include "./blocks/footer/footer.twig" %}
  {% include "./components/modal/modal.twig" %}
</div>

<script src="./js/index.js"></script>

{% if env == 'local' %}
  <script src="http://localhost:35729/livereload.js"></script>
{% endif %}
</body>

</html>
